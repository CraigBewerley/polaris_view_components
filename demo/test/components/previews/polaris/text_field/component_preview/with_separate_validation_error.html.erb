<%= polaris_stack(wrap: false) do |stack| %>
  <% stack.item(fill: true) do %>
    <%= polaris_form_layout do |form_layout| %>
      <% form_layout.group(condensed: true) do |group| %>
        <% group.item do %>
          <%= polaris_select(
            attribute: :attribute,
            label: "Collection rule type",
            label_hidden: true,
            options: { "Product type" => "product_type" },
          ) %>
        <% end %>
        <% group.item do %>
          <%= polaris_select(
            attribute: :attribute,
            label: "Collection rule condition",
            label_hidden: true,
            options: { "Is equal to" => "is_equal_to" },
          ) %>
        <% end %>
        <% group.item do %>
          <%= render Polaris::TextField::Component.new(
            attribute: :attribute,
            label: "Collection rule content",
            label_hidden: true,
            id: "thisIsTheId",
            error: true,
          ) %>
        <% end %>
      <% end %>
    <% end %>

    <div style="margin-top: 4px;">
      <%= polaris_inline_error { "Enter 3 or more characters for product type is equal to" } %>
    </div>
  <% end %>
  <% stack.item do %>
    <%= polaris_button do |button| %>
      <% button.icon(name: "DeleteMinor") %>
    <% end %>
  <% end %>
<% end %>
