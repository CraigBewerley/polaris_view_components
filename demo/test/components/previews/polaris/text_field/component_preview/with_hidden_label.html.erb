<%= polaris_form_layout do |form_layout| %>
  <% form_layout.item do %>
    <%= render Polaris::ChoiceList::Component.new(
      name: :attribute,
      title: "Gift card auto-expiration",
      choices: [
        { label: "Gift cards never expire", value: "no" },
        { label: "Gift cards expire", value: "yes" },
      ],
      selected: ["yes"]
    ) %>
  <% end %>

  <% form_layout.item do %>
    <%= render Polaris::TextField::Component.new(
      attribute: :attribute,
      label: "Gift cards expire after",
      label_hidden: true,
      type: "number",
      value: "12"
    ) do |component| %>
      <% component.with(:connected_right) do %>
        <%= polaris_select(
          attribute: :unit,
          label: "Unit of time",
          label_hidden: true,
          options: { "months after purchase" => "" },
        ) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
