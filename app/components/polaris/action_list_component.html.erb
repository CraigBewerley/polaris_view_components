<%= render Polaris::BaseComponent.new(**system_arguments) do %>
  <% if sections.present? %>
    <% sections.each do |section| %>
      <%= section %>
    <% end %>
  <% else %>
    <%= render Polaris::ActionList::SectionComponent.new do %>
      <% items.each do |item| %>
        <%= item %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
