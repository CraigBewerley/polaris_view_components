<%= render Polaris::TextField::Component.new(
  attribute: :attribute,
  label: "Weight",
  type: "number",
  value: "10.6"
) do |component| %>
  <% component.with(:connected_left) do %>
    <%= polaris_select(
      name: :weight_unit,
      label: "Weight unit",
      label_hidden: true,
      options: { "kd" => "kg", "lb" => "lb" },
      selected: "kg",
    ) %>
  <% end %>
  <% component.with(:connected_right) do %>
    <%= polaris_button { "Submit" } %>
  <% end %>
<% end %>
